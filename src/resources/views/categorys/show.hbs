<div class="container-fluid" style="padding: unset; margin: unset;">
    <div style="font-weight: 500; margin: 15px 135px;">
        <p>
        Trang chủ >
        <span>Tất cả sản phẩm</span>
        </p>
        <h4 class="title">Tất Cả Sản Phẩm
            <hr>
        </h4>


    </div>


    <section class="slider-section">
        <div class="row">
            <div class="col-6 col-sm-12 ">
                <img src="/img/products/bia.png" alt="ảnh bìa" style="width: 100%;height: auto;" />
            </div>
        </div>
    </section>
    <div class="content__section">
        <div class="content__title">
            <h1 style="font-size: 40px;">TẤT CẢ SẢN PHẨM</h1>
        </div>
    </div>
    {{!-- show sản phẩm --}}
    <div style="margin: 20px 135px;"">
        <div class="mt-4">
            <div class="row">
                {{#each products}}
                <div class="col-sm-6 col-lg-3">
                    <div class="card card-product-item">
                        <a href="/products/{{this.slug}}">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.price}}">
                        </a>
                        <div class="card-body">
                            <a href="/products/{{this.slug}}">
                                <h5 class="card-title text-center">{{this.name}}</h5>
                                <p class="card-text text-center">{{this.price}}</p>
                            </a>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>