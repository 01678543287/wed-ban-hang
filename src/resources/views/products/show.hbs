<script>
  
  function showImg(img){
    var mainImg = document.getElementsByClassName('mainImg')[0];
    
    var $$ = document.getElementsByClassName('img-show');
    for (const element of $$) {
      if(element == img){
        mainImg.setAttribute("src", element.src);
        break;
      }
    }
  }
</script>