<div class="mt-4">
    <div class="row">
        <div class="col-lg-2">
            <img src="{{product.image}}" frameborder="0" style="width: 100% ; height: auto; border: ridge 1px black; margin: 20px;" onclick="getElementById('large-image').src='{{product.image}}'" />
            <img src="{{product.imageshow1}}" frameborder="0" style="width: 100% ; height: auto; border: ridge 1px black; margin: 20px;" onclick="getElementById('large-image').src='{{product.imageshow1}}'"/>
            <img src="{{product.imageshow2}}" frameborder="0" style="width: 100% ; height: auto; border: ridge 1px black; margin: 20px;" onclick="getElementById('large-image').src='{{product.imageshow2}}'"/>
        </div>
        <div class="col-lg-7" >
                <img src="{{product.image}}" alt="" id="large-image"  style="width: 100%; height: auto;border: ridge 2px black; margin: 20px; " />
        </div>
        <div class="col-lg-3" >
            <h1 style="font-size: 50px ; color: black; padding-bottom: 15x;border-bottom: ridge 2px; font-weight: 800;">{{product.name}}</h1>
            <h2 style="margin-bottom: 10px;">Giá: {{product.price}}đ</h2>
            <p>{{product.description}}</p>
            <button class="btn btn-add-cart" style="border: none; background: #000000; color: #FFFFFF;height: 40px;width: 200px;" data-id="{{product._id}}">Thêm vào giỏ hàng</button>
            
        </div>
    </div>
</div>

<form name="add-cart-form" method="GET" ></form>



<script>
    document.addEventListener('DOMContentLoaded', function(){
        var productId;
        var addCartForm = document.forms['add-cart-form'];
        var addCartBtn = $('.btn-add-cart');
        var size = document.forms['size'];


        // Restore btn clicked
        addCartBtn.click(function(e){
          //e.preventDefault();

          var productId = $(this).data('id');
          addCartForm.action = '/cart/' + productId +'/add-cart';
          addCartForm.submit();
        });

    });

</script>