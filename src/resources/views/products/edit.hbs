<div class="mt-4" style="padding: 10px 20%;position: relative;">
    <h3>Cập nhật sản phẩm</h3>

    <form class="mt-4" method="POST" action="/products/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{product.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="text" class="form-control" value="{{product.image}}" id="image" name="image" required>
        </div>
        <div class="form-group">
            <label for="imageshow1">Hình ảnh trong show</label>
            <input type="text" class="form-control" value="{{product.imageshow1}}" id="imageshow1" name="imageshow1" required>
        </div>
        <div class="form-group">
            <label for="imageshow2">Hình ảnh trong show</label>
            <input type="text" class="form-control" value="{{product.imageshow2}}" id="imageshow2" name="imageshow2" required>
        </div>
        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" value="{{product.price}}" id="price" name="price" required>
        </div>
        
        <button type="submit" class="button-w mt-4 mb-4">Lưu lại</button>
    </form>
            <a href="/me/stored/products"><button type="submit" class="button-w button-form">Back</button></a>
</div>