{{#if products}}
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Số lượng</th>
                <th scope="col" colspan="2">Giá</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.item.name}}</td>
                <td>{{this.qty}}</td>
                <td>{{this.price}}</td>
                <td>
                    <a href="" class="btn btn-Reduce" data-toggle="modal" data-id="{{this._id}}" data-target="#btnReduce-Product-modal">-</a>
                    <a href="" class="btn btn-Add" data-toggle="modal" data-id="{{this._id}}" data-target="#btnAdd-Product-modal">+</a>
                    <a href="" class="btn btn-Remove" data-toggle="modal" data-id="{{this._id}}" data-target="#btnRemove-Product-modal">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3"></div>
            <strong>Tổng tiền: {{session.cart.totalPrice}}đ</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3"></div>
            <a href="/checkout" type="button" class="btn btn-success">Thanh toán</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3"></div>
            <h2>Giỏ hàng trống.</h2>
        </div>
    </div>
{{/if}}

