<div class="mt-4" style="position: relative;">

    <h3>Bảng thống kê doanh thu theo tháng {{sum month 1}}</h3>

    <table id="table-w" class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Thời gian mua</th>
                <th scope="col">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td scope="row">{{sum @index 1}}</td>
                <td>{{this.user}}</td>
                <td>{{this.updatedAt}}</td>
                <td>{{this.cart.totalPrice}}</td>
                {{#each this.cart.items}}
                    {{this.item.name}}
                    {{this.qty}}
                    {{this.item.price}}
                {{/each}}
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Bạn chưa có đơn hàng nào trong tháng này
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{revenue}}
        <a href="/me"><button type="submit" class="button-w button-form">Back</button></a>
</div>


