
  
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Thanh Toán</h1>
        <h4>Tổng Tiền: {{total}}</h4>
        {{!-- <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div> --}}
        <form action="/checkout/final" method="POST">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Họ Tên</label>
                        <input type="text" id="nameKH" class="form-control" required name="nameKH">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Địa chỉ</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Số Điện Thoại</label>
                        <input type="text" id="phone" class="form-control" required name="phone">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Email</label>
                        <input type="text" id="email" class="form-control" required name="email">
                    </div>
                </div>
                
            </div>
            <button type="submit" class="btn btn-primary">Hoàn tất đơn hàng</button>
        </form>
    </div>
</div>