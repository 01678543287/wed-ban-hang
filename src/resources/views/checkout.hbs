<div class="container-form">
    <div class="wrap mt-4 mb-4">
        <div class="breadcrumb-news">
            <p>
                Trang chủ >
                <span> Thanh toán </span>
            </p>
            <h4 class="title"><i class="fas fa-cart-arrow-down mr-2"></i>Thanh toán
                <hr>
            </h4>
        </div>
        <div style="padding: 0 20%;">
            <h1>Vui lòng điền thông tin</h1>
            {{!-- <h4>Tổng Tiền: {{total}}</h4> --}}
            {{!-- <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
                {{errMsg}}
            </div> --}}
            <form action="/checkout/final" method="POST" >
                <div class="row" style="flex-direction: column;">
                   
                    <div class="form-group">
                        <label class="ml-2" for="name">Họ Tên *</label>
                        <input type="text" id="nameKH" class="form-control" required name="nameKH">
                    </div>
                   
                    <div class="form-group">
                        <label class="ml-2" for="address">Địa chỉ *</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
             
                    <div class="form-group">
                        <label class="ml-2" for="card-name">Số Điện Thoại *</label>
                        <input type="text" id="phone" class="form-control" required name="phone">
                    </div>
                   
                    <div class="form-group">
                        <label class="ml-2" for="card-number">Email *</label>
                        <input type="text" id="email" class="form-control" required name="email">
                    </div>
                    
                    <div class="form-group mt-2 ml-2" >
                        
                        <h4>Tổng Tiền: <span style="color:#17a2b8;">{{total}}đ</span> </h4>
                       <button type="submit" class="button-w mt-1">Hoàn tất đơn hàng </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
